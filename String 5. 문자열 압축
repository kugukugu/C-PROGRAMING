#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <time.h>
#include <string.h>

int main(void)
{
   char str[100];

   scanf("%s", str);

    int i=0 ;
    int k =0;

    while(str[i] != '\0')
    {
        if(str[i] == str[i+1])
        {
           k+=1;
        }
        else
        {
            printf("%c%d",str[i],k+1);
            k=0;
        }

        i++;

    }

	return 0;
}
