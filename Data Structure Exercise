#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <math.h>
#include <stdlib.h>

struct _Lotto
{
    int a[6];
};

int main()
{
    srand(time(NULL));
    int money;
    printf("금액을 입력하시오.");
    scanf("%d", &money);
    money = money / 1000;

    struct _Lotto* p;
    p = (struct _Lotto*)malloc(sizeof(struct _Lotto) * money );

    int i,j;
    int k = 0;
    int c = 1;
    printf("==로또 번호 출력==\n");
    printf("==회차 : 1139==\n");
   
    for (i = 0; i < 6*money; i++)
    {        
        if (k == 0)
        {
            printf("[%d] ", c);
            c++;
        }
        p->a[i] = rand() % 45 + 1;
        printf("%d ", p->a[i]);
        k++;
        if (k == 6)
        {
            printf("\n");
                
            k = 0;
        }
    }
  
    free(p);

    return 0;
}
