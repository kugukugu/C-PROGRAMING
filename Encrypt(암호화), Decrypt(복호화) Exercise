#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <time.h>
#include <stdlib.h>

int main()
{
    int mask = 1 << 7;
    char q[10];
    int p[10] = {129,1,2,5,6,7,18,13,12,14};

    printf("문자열을 입력하시오.");
    scanf("%s", &q);

    printf("original : %s\n", q);

    int i,k;

    for (k = 0; q[k] != '\0'; k++)
    {
        for (i = 0; i < 8; i++)
        {
            if (i == 4)
            {
                printf(" ");
            }
            printf("%d", mask & q[k] ? 1 : 0);
            mask >>= 1;
        }
        printf(" | ");
        mask = 1 << 7;
    }printf("\n\n");

    int u;

    printf("encrypt : ");

    for (u = 0; q[u] != '\0'; u++)
    {
        printf("%c", q[u]^p[u]);
    }
    printf("\n");

    for (k = 0; q[k] != '\0'; k++)
    {
        for (i = 0; i < 8; i++)
        {
            if (i == 4)
            {
                printf(" ");
            }
            printf("%d", mask & (q[k] ^ p[k]) ? 1 : 0);
            mask >>= 1;
        }
        printf(" | ");
        mask = 1 << 7;
    }printf("\n\n");

    printf("decrypt : ");

    for (u = 0; q[u] != '\0'; u++)
    {
        printf("%c", (q[u] ^ p[u]) ^ p[u]);
    }printf("\n");

    for (k = 0; q[k] != '\0'; k++)
    {
        for (i = 0; i < 8; i++)
        {
            if (i == 4)
            {
                printf(" ");
            }
            printf("%d", mask & ((q[k] ^ p[k]) ^ p[k]) ? 1 : 0);
            mask >>= 1;
        }
        printf(" | ");
        mask = 1 << 7;
    }
  
    return 0;
}
