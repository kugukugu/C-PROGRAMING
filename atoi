#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>

int main()
{
	char arr[100];
	printf("정수를 입력하시오.");
	scanf("%s", arr);

	int i;
	int n=0;
		
	if (arr[0] == '-')
	{
		for (i = 1; i <= strlen(arr) - 1; i++)
		{
			n = n * 10 + (arr[i] - '0');
		}
			n = -n;
	}
			
	else
	{
		for (i = 0; i <= strlen(arr) - 1; i++)
		{
			n = n * 10 + (arr[i] - '0');
		}
	}
	
	printf("%d의 약수: ", n);

	for (i = 1; i <= n; i++)
	{
		if (n % i == 0)
		{
			printf("%d ", i);

		}
	}
	return 0;
}
